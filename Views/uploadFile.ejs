<%- layout('layout/layout.ejs') %>



	<%- include('partials/top-bar.ejs') %>
        <div id="viewscreen" >
            <%- include('partials/side-navbar.ejs') %>
            <div id="rightview" >
                <div class="container-fluid div-min-width" style="padding:0;">
                    <div class="row">
                        <div class="col-lg-12 parentDiv" style="padding:0">
                            <div class="container">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6 mainDiv">
                                    <div class="alert alert-info" id="email_info">
                                    	<center id="display_email"></center>
                                    </div>
                                    <h1 class="heading">Upload File</h1>
                                    <div class="col-sm-12">
                                    <form class="uploadImage" action="/user/uploadmultiple" enctype="multipart/form-data" method="POST">

                                        <div class="form-group">
                                            <input type="text" class="form-control" onchange="email_avail()" id="title" placeholder="Enter Email" autocomplete="off" required><br>
                                        </div>

                                        <div class="form-group">
                                            <input type="text" class="form-control" id="message" placeholder="Enter Message" autocomplete="off" required><br>
                                        </div>

                                        <div class="form-group">
                                        Select Files: <input type="file" name="myFiles" multiple id="user_files">
                                            <br>
                                            <input type="submit" value="Upload File" class="btn btn-success" id="submit-btn">
                                            <input value="Cancel" class="btn btn-danger" id="cancel-btn">
                                        </div>

                                    </form>
                                    <br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<script type="text/javascript" src="js/uploadFile.js"></script>
